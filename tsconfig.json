{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@action-creators": ["action-creators/*"],
      "@actions": ["actions/*"],
      "@components": ["components/*"],
      "@ui": ["components/ui/*"],
      "@config": ["config/*"],
      "@constants": ["constants/*"],
      "@data": ["data/*"],
      "@hoc": ["hoc/*"],
      "@hooks": ["hooks/*"],
      "@layouts": ["components/layouts/*"],
      "@i18n.js": ["i18n/*"],
      "@images": ["public/images/*"],
      "@locales": ["public/locales/*"],
      "@public": ["public/*"],
      "@reducers": ["reducers/*"],
      "@sagas": ["sagas/*"],
      "@services": ["services/*"],
      "@store": ["store/*"],
      "@style": ["./style/*"],
      "@test": ["__test__/*"],
      "@utils": ["utils/*"] 
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}