{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.tsx",
    "action-creators",
    "actions",
    "components",
    "components/common",
    "config",
    "utils/constants",
    "utils/data",
    "hoc",
    "hooks",
    "i18n.js",
    "static/images",
    "static/locales",
    "public",
    "reducers",
    "sagas",
    "services",
    "store/store.js",
    "style",
    "__test__",
    "utils"
  ]
}